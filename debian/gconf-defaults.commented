# This is a commented version of debian/gconf-defaults
# Edit only this file, the one usual one is automatically generated from this one

# Compiz
/apps/compiz/general/screen0/options/hsize 2
/apps/compiz/general/screen0/options/vsize 2
/apps/compiz/plugins/place/screen0/options/mode 1
/apps/compiz/plugins/expo/allscreens/options/hide_docks true
/apps/compiz/plugins/expo/allscreens/options/reflection false
/apps/compiz/plugins/expo/allscreens/options/vp_distance 0.7500

# Desktop Theme
/desktop/gnome/interface/gtk_theme elementary
/desktop/gnome/interface/icon_theme elementary-mono-dark
/apps/metacity/general/theme elementary
/desktop/gnome/background/picture_options zoom
/desktop/gnome/background/primary_color "#545454"
/desktop/gnome/background/secondary_color "#545454"
/desktop/gnome/background/picture_filename /usr/share/backgrounds/16.jpg
/desktop/gnome/peripherals/mouse/cursor_theme DMZ-Black

# Fonts
/desktop/gnome/interface/font_name "Droid Sans 9"
/desktop/gnome/interface/document_font_name "Droid Sans 10"
/desktop/gnome/interface/monospace_font_name "Droid Sans Mono 10"
/apps/nautilus/preferences/desktop_font "Droid Sans 10"
/apps/metacity/general/titlebar_font "Droid Sans Bold 9"

# Indicators
/system/indicator/me/display 0

# Interface
/desktop/gnome/interface/toolbar_style icons

# Metacity
/apps/metacity/general/num_workspaces 4
/apps/metacity/general/compositing_manager true
/apps/metacity/general/button_layout close,minimize,maximize:

# Mouse & Trackpad
/desktop/gnome/peripherals/touchpad/scroll_method 2
/desktop/gnome/peripherals/touchpad/horiz_scroll_enabled true

# Nautilus
/apps/nautilus/preferences/rgba_colormap false
/apps/nautilus/desktop/volumes_visible false
/apps/nautilus/preferences/sidebar_show_places_menu false
/apps/nautilus/preferences/start_with_menubar false
/apps/nautilus/preferences/pathbar_like_breadcrumbs true
# sweep remains of desktop
/apps/nautilus/preferences/show_desktop false
/apps/nautilus/preferences/desktop_is_home_dir true

# Set BeatBox as default music player
/desktop/gnome/applications/media/exec beatbox

# Set Midori as default browser
/desktop/gnome/applications/browser/exec midori

# Set Postler as default mail client
/desktop/gnome/url-handlers/mailto/command postler

# GPM
/apps/gnome-power-manager/ui/icon_policy present

# Don't show Input Method and Unicode Control Character entries in context menu
/desktop/gnome/interface/show_input_method_menu false
/desktop/gnome/interface/show_unicode_menu false
